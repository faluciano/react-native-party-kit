{
  "name": "@couch-kit/core",
  "version": "0.5.0",
  "description": "Shared types, protocol, and game reducer for Couch Kit party games",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/faluciano/react-native-couch-kit.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/faluciano/react-native-couch-kit#readme",
  "keywords": [
    "react-native",
    "couch-kit",
    "party-game",
    "game-state",
    "reducer"
  ],
  "main": "./dist/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "src",
    "dist",
    "lib",
    "README.md",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target browser && tsc -p tsconfig.build.json",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist lib"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "eslint": "^8.57.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
