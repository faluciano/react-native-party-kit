{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./lib",
    "outDir": "./lib",
    "rootDir": "./src",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "paths": {
      "expo-file-system/next": [
        "./node_modules/expo-file-system/build/index.d.ts"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__tests__/**", "src/**/__mocks__/**"]
}
